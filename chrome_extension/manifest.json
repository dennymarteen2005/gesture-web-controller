{
  "manifest_version": 3,
  "name": "Gesture Web Controller",
  "version": "1.0",
  "description": "Control websites using hand gestures",
  "permissions": ["scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
